{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build and Run with GCC 14.2.0",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // Outputs to the fileName.exe
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run C++ Code",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",  // Runs the generated .exe file
            "dependsOn": "Build and Run with GCC 14.2.0",  // Ensures build is done before running
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Run the compiled .exe code."
        },
        {
            "label": "Clean Output",
            "type": "shell",
            "command": "del /f /q ${fileDirname}\\${fileBasenameNoExtension}.exe",  // Deletes the .exe file after execution (on Windows)
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Delete the .exe file after execution."
        }
    ]
}
